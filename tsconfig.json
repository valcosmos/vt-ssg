{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@shared/*": ["shared/*"],
      "@runtime": ["runtime/index.ts"]
    },
    /* Type Checking */
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
