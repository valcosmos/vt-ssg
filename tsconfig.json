{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "jsx": "react-jsx",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    /* Type Checking */
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["**/**.ts"],
  "exclude": ["node_modules"]
}
